<div class="row">
  <div class="col-md-12">
    <%= form_with(model: user, local: true) do |form| %>
      <%= render 'shared/errors', form: user %>
      <div class="field form-group">
        <%= form.label :username, for: "user_username" %>
        <%= form.text_field :username, id: :user_username, class: "form-control" %>
        <small id="emailHelp" class="form-text text-muted">Enter your username</small>
      </div>

      <div class="field form-group">
        <%= form.label :email, for: "user_email" %>
        <%= form.text_field :email, id: :user_email, class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= form.label :full_name, for: "user_email" %>
        <%= form.text_field :full_name, id: :user_full_name, class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= form.label :password, for: "user_password" %>
        <%= form.password_field :password, id: :user_password, class: "form-control" %>
      </div>

      <div class="actions form-group">
        <%= form.submit class: "btn btn-primary" %>
      </div>
    <% end %>    
  </div>
</div>

