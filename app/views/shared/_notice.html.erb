<% unless notice.nil? %>
	<div class="alert alert-info alert-dismissible fade show" id="notice">
	  <div class="notice"><%= notice.capitalize %></div>	
	  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
	    <span aria-hidden="true">&times;</span>
	  </button>	
	</div>
<% end %>
