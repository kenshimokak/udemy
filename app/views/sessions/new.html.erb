<% if flash[:notice] %>
	<div class="alert alert-danger">
		<%= flash[:notice] %>
	</div>	
<% end %>
<h1>Login</h1>
<div class="row">
  <div class="col-md-12">
    <%= form_for(:session, url: login_path) do |form| %>
      <div class="field form-group">
        <%= form.label :email, for: "user_email" %>
        <%= form.text_field :email, id: :user_email, class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= form.label :password, for: "user_password" %>
        <%= form.password_field :password, id: :user_password, class: "form-control", autocomplate: 'off' %>
      </div>

      <div class="actions form-group">
        <%= form.submit "Log in", class: "btn btn-primary" %>
      </div>
    <% end %>    
  </div>
</div>

